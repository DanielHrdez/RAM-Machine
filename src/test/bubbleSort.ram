# Programa para la ejecucion de 
# un algoritmo de ordenacion por bubblesort

            LOAD =0
            STORE 2

# Leemos el vector y los almacenamos en R1, su tamaño n en R2
lee:        READ 0
            JZERO sort
            STORE R1[R2]
            LOAD 2
            ADD 1
            STORE 2
            JUMP lee

# Inicializamos los dos bucles for, 
# i está en R3, n-1 en R4
# j se guarda en R5
sort:       LOAD =1
            STORE 3
for1:       LOAD 2
            SUB =1
            STORE 4
            SUB 3
            JZERO end
            LOAD 2
            STORE 5
for2:       LOAD 3
            ADD =1
            SUB 5
            JZERO endfor2

# Comprobamos el bloque if, 
# guardo A[j - 1] en R6
            LOAD 5
            SUB =1
            LOAD R1[R0]
            STORE 6
            LOAD R1[R5]
            SUB 6
            JGTZ endif
if:         LOAD 6
            STORE R1[R6]
            LOAD 6
            STORE R1[R5]
endif:      LOAD 5
            SUB =1
            STORE 5
            JUMP for2

endfor2:    LOAD 3
            ADD =1
            STORE 3
            JUMP for1

# Escribimos en la cinta de salida
end:        STORE 3
            SUB 2
            JZERO halt
            WRITE R1[R3]
            LOAD 3
            ADD =1
            JUMP end
halt:       HALT